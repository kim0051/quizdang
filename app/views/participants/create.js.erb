<% if @question.owner?(current_user) %>
  App.f7.toast('<%= t('questions.owner') %>', '<div><i class="ti-lock"></i></div>', {}).show();
<% else %>
  <% if @participant.persisted? %>
    App.mainView.router.reloadPage('<%= participant_path(@participant) %>');
  <% else %>
    <% template = j render 'questions/participant_form', question: @question %>
    $('#<%= dom_id @question %> #new_participant').replaceWith('<%= template %>');
  <% end %>
<% end %>
