<li>
  <div class="item-content">
    <div class="item-media">
      <% if option.correct? %>
        <i class="ti-check highlight"></i>
      <% else %>
        <i class="ti-close"></i>
      <% end %>
    </div>

    <div class="item-inner">
      <div class="item-title-row">
        <div class="item-title"><%= option.text %></div>
        <div class="item-after">응답자 <%= option.participants.count %>명</div>
      </div>
    </div>
  </div>
</li>
